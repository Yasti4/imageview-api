{
    "name": "imageview-server",
    "version": "1.0.0",
    "description": "An API for an image sharing platform.",
    "scripts": {
        "dev": "docker-compose down && docker-compose -p imageview up --build -d",
        "dev:open": "docker-compose -p imageview up  --build",
        "dev:close": "docker-compose down",
        "terminal": "docker exec -it $(docker ps --filter name=imageview_node -q) /bin/sh",
        "exec": "npm run terminal -c",
        "start": "node ./src/app.js",
        "serve": "./node_modules/.bin/nodemon ./src/app.js",
        "prerelease": "./node_modules/.bin/standard-version",
        "release": "git commit -am",
        "postrelease": "git push --follow-tags origin master",
        "migrate": "./node_modules/.bin/sequelize db:migrate",
        "migrate:rollback": "./node_modules/.bin/sequelize db:migrate:undo:all",
        "migrate:reset": "npm run migrate:rollback && npm run migrate",
        "make:migration": "./node_modules/.bin/sequelize migration:generate --name",
        "db:seed": "./node_modules/.bin/sequelize db:seed:all",
        "make:seeder": "./node_modules/.bin/sequelize seed:generate --name"
    },
    "author": "Adrià Muñoz, Denís Navarro",
    "private": false,
    "repository": {
        "type": "git",
        "url": "https://github.com/Yasti4/imageview-api.git"
    },
    "license": "MIT",
    "dependencies": {
        "apollo-server-express": "^1.3.6",
        "apollo-upload-server": "^5.0.0",
        "body-parser": "^1.18.2",
        "compression": "^1.7.2",
        "cors": "^2.8.4",
        "dotenv": "^5.0.1",
        "express": "^4.16.3",
        "graphql": "^0.13.2",
        "graphql-date": "^1.0.3",
        "graphql-fields": "^1.0.2",
        "graphql-tools": "^2.24.0",
        "jwt-simple": "^0.5.1",
        "mysql2": "^1.5.3",
        "promises-all": "^1.0.0",
        "sequelize": "^4.37.6",
        "sharp": "^0.20.2",
        "shortid": "^2.2.8"
    },
    "devDependencies": {
        "@types/faker": "^4.1.2",
        "@types/sequelize": "^4.27.15",
        "faker": "^4.1.0",
        "nodemon": "^1.17.3",
        "ouch": "^1.1.0",
        "sequelize-cli": "^4.0.0",
        "standard-version": "^4.3.0"
    }
}
