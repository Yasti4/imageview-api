{
  "name": "imageview-server",
  "version": "1.0.0",
  "description": "An API for an image sharing platform.",
  "scripts": {
    "start": "./node_modules/.bin/nodemon ./src/app.js",
    "migrate": "node ./src/scripts/migrations.js --migrate",
    "migrate:rollback": "node ./src/scripts/migrations.js --rollback",
    "make:migration": "node ./src/scripts/migrations.js --make",
    "db:seed": "node ./src/scripts/seeds.js --run",
    "make:seeder": "node ./src/scripts/seeds.js --make"
  },
  "author": "Adrià Muñoz, Denís Navarro",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/Yasti4/imageview-api.git"
  },
  "license": "MIT",
  "dependencies": {
    "apollo-server-express": "^1.3.2",
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.2",
    "bookshelf": "^0.12.1",
    "bookshelf-eloquent": "^0.1.15",
    "bookshelf-paranoia": "^0.11.0",
    "bookshelf-scopes": "^1.5.0",
    "compression": "^1.7.2",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "graphql": "^0.13.1",
    "graphql-date": "^1.0.3",
    "graphql-directive": "^0.2.1",
    "graphql-fields": "^1.0.2",
    "graphql-tools": "^2.21.0",
    "jwt-simple": "^0.5.1",
    "knex": "^0.14.4",
    "moment": "^2.21.0",
    "mysql": "^2.15.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^1.0.0",
    "@types/body-parser": "^1.16.8",
    "@types/bookshelf": "^0.9.8",
    "@types/dotenv": "^4.0.2",
    "@types/faker": "^4.1.2",
    "@types/graphql": "^0.12.3",
    "@types/jwt-simple": "^0.5.33",
    "@types/knex": "^0.14.5",
    "@types/moment": "^2.13.0",
    "@types/mysql": "^2.15.2",
    "@types/node": "^9.4.7",
    "faker": "^4.1.0",
    "nodemon": "^1.17.1"
  }
}
