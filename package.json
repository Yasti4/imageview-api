{
  "name": "imageview",
  "version": "1.0.0",
  "description": "A platform for sharing images.",
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.0.0"
  },
  "author": "Denís Navarro, Adrià Muñoz",
  "license": "MIT",
  "private": true,
  "main": "app/server.js",
  "scripts": {
    "start": "NODE_PATH=. nodemon --exec babel-node ./app/server.js",
    "test": "babel-node ./test/index.js",
    "script": "NODE_PATH=. babel-node ./scripts/index.js",
    "db:migrate": "npm run script db:migrate",
    "db:seed": "npm run script db:seed",
    "db:reset": "npm run script db:migrate reset && npm run script db:migrate latest && npm run script db:seed run",
    "docker": "npm run docker:open -d",
    "docker:open": "npm run docker:close && docker-compose -p imageview up --build",
    "docker:close": "docker-compose down",
    "docker:terminal": "docker exec -it $(docker ps --filter name=imageview_node -q) /bin/sh",
    "docker:exec": "npm run docker:terminal -c"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.5",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "chalk": "^2.4.1",
    "eslint": "^5.0.1",
    "eslint-plugin-babel": "^5.1.0",
    "faker": "^4.1.0",
    "nodemon": "^1.17.5"
  },
  "dependencies": {
    "apollo-server-express": "^1.3.6",
    "apollo-upload-server": "^5.0.0",
    "bcrypt": "^3.0.0",
    "body-parser": "^1.18.3",
    "compression": "^1.7.2",
    "cors": "^2.7.4",
    "dotenv": "^6.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "graphql": "^0.13.2",
    "graphql-date": "^1.0.3",
    "graphql-tools": "^3.0.5",
    "jwt-simple": "^0.5.1",
    "mysql": "^2.15.0",
    "nodemailer": "^4.6.7",
    "sharp": "^0.20.5",
    "shortid": "^2.2.10",
    "tabel": "^2.6.8"
  }
}
