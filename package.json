{
  "name": "imageview",
  "version": "1.0.0",
  "description": "A platform for sharing images.",
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.0.0"
  },
  "author": "Denís Navarro, Adrià Muñoz",
  "license": "MIT",
  "private": true,
  "main": "app/server.js",
  "scripts": {
    "start": "NODE_PATH=. nodemon ./app/server.js",
    "test": "ava test/**/*.test.js --verbose",
    "test:watch": "ava test/**/*.test.js --verbose --watch",
    "script": "node ./scripts/index.js",
    "db:migrate": "npm run script db:migrate",
    "db:seed": "npm run script db:seed",
    "db:reset": "npm run script db:migrate reset && npm run script db:migrate latest && npm run script db:seed run",
    "docker": "docker-compose ps",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:rebuild": "docker-compose build --no-cache",
    "docker:reload": "npm run docker:down && npm run docker:up",
    "docker:restart": "npm run reload",
    "docker:npm": "docker-compose exec app /bin/sh -c npm",
    "docker:terminal": "docker-compose exec app /bin/sh"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "chalk": "^2.4.1",
    "eslint": "^5.1.0",
    "faker": "^4.1.0",
    "nodemon": "^1.17.5",
    "sinon": "^6.1.3"
  },
  "dependencies": {
    "apollo-server-express": "^1.3.6",
    "apollo-upload-server": "^5.0.0",
    "bcrypt": "^3.0.0",
    "body-parser": "^1.18.3",
    "compression": "^1.7.2",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "graphql": "^0.13.2",
    "graphql-date": "^1.0.3",
    "graphql-tools": "^3.0.5",
    "jwt-simple": "^0.5.1",
    "mysql": "^2.15.0",
    "nodemailer": "^4.6.7",
    "sharp": "^0.20.5",
    "shortid": "^2.2.11",
    "tabel": "^2.6.8"
  }
}
